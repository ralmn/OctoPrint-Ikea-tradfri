<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Ikea Gateway IP') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.ikea_tradfri.gateway_ip">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Ikea Gateway Security Code') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.ikea_tradfri.security_code">
        </div>
    </div>
    <div class="control-group" data-bind="">
        <label class="control-label">{{ _('Printer outlet') }}</label>
        <div class="controls">
            <!-- <input type="text" class="input-block-level" data-bind="value: settings.plugins.ikea_tradfri.security_code"> -->
            <select data-bind="value: settings.plugins.ikea_tradfri.selected_outlet">
                {% for dev in plugin_ikea_tradfri_devices %}
                        <option value="{{ dev[0] }}">{{ dev[1] }}</option>
                    {% endfor %}
                    
            </select>
        </div>
    </div>
</form>
 
                
